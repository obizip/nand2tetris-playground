/**
 * 8-way demultiplexor:
 * [a, b, c, d, e, f, g, h] = [in, 0,  0,  0,  0,  0,  0,  0] if sel = 000
 *                            [0, in,  0,  0,  0,  0,  0,  0] if sel = 001
 *                            [0,  0, in,  0,  0,  0,  0,  0] if sel = 010
 *                            [0,  0,  0, in,  0,  0,  0,  0] if sel = 011
 *                            [0,  0,  0,  0, in,  0,  0,  0] if sel = 100
 *                            [0,  0,  0,  0,  0, in,  0,  0] if sel = 101
 *                            [0,  0,  0,  0,  0,  0, in,  0] if sel = 110
 *                            [0,  0,  0,  0,  0,  0,  0, in] if sel = 111
 */
CHIP DMux8Way {
    IN in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    DMux4Way(in=in, sel=sel[0..1], a=ta, b=tb, c=tc, d=td);
    Not(in=sel[2], out=nsel2);
    And(a=ta, b=nsel2, out=a);
    And(a=tb, b=nsel2, out=b);
    And(a=tc, b=nsel2, out=c);
    And(a=td, b=nsel2, out=d);
    And(a=ta, b=sel[2], out=e);
    And(a=tb, b=sel[2], out=f);
    And(a=tc, b=sel[2], out=g);
    And(a=td, b=sel[2], out=h);
}
